{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "importsNotUsedAsValues": "remove",
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "swc": true,
    "esm": true
  }
}
